<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yuramax.aspectjdemo.MainActivity">

    <Button
        android:id="@+id/btnSkip"
        android:text="跳转到需要过滤登录的Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSkipNoLogin"
        android:text="跳转到不需要过滤登录的Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSkipLoginFilter"
        android:text="跳转到继承LoginFilterActivity的Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="清除登录信息"
        android:id="@+id/btnClearLoginInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
